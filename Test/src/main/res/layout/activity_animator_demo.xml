<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_animator_demo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dysen.test.view.animator.AnimatorDemo">

    <ImageView
        android:id="@+id/iv_animator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:onClick="doClick"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btn_animator">

        <ImageView
            android:id="@+id/iv_1_animator"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="doClick"
            android:src="@drawable/ic_num_1"/>
        <ImageView
            android:id="@+id/iv_2_animator"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="doClick"
            android:src="@drawable/ic_num_2"/>
        <ImageView
            android:id="@+id/iv_3_animator"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="doClick"
            android:src="@drawable/ic_num_3"/>
        <ImageView
            android:id="@+id/iv_4_animator"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="doClick"
            android:src="@drawable/ic_num_4"/>

        <ImageView
            android:id="@+id/iv_0_animator"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="doClick"
            android:src="@drawable/ic_num_0"/>

    </FrameLayout>

    <Button
        android:id="@+id/btn_animator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始动画"
        android:onClick="doClick"
        android:layout_marginStart="43dp"
        android:layout_marginTop="69dp"
        android:layout_below="@+id/iv_animator"
        android:layout_toEndOf="@+id/iv_animator" />

    <Button
        android:id="@+id/btn_value_animator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="valueAnimator"
        android:onClick="doClick"
        android:layout_marginStart="27dp"
        android:layout_alignTop="@+id/btn_animator"
        android:layout_toEndOf="@+id/btn_animator" />

</RelativeLayout>
