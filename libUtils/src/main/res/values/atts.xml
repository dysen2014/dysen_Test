<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--panorama imageview-->
    <declare-styleable name="PanoramaImageView">
        <attr name="piv_enablePanoramaMode" format="boolean" />
        <attr name="piv_invertScrollDirection" format="boolean" />
        <attr name="piv_show_scrollbar" format="boolean" />
    </declare-styleable>

    <!-- -->
    <declare-styleable name="DashSpinner">
        <attr name="arcSweepSpeed" format="float" />                    <!-- The units that the arc moves by on the circle. Will gradually reduce to zero -->
        <attr name="arcStartPosition" format="float" />                 <!-- Value between 0.0 - 360.0 -->
        <attr name="arcColor" format="color"/>                          <!-- The arc color -->
        <attr name="arcWidth" format="reference|dimension"/>            <!-- The arc width -->
        <attr name="arcLength" format="float"/>                         <!-- The arc length -->
        <attr name="outerRingWidth" format="reference|dimension"/>      <!-- The outer ring width -->
        <attr name="outerRingColor" format="color"/>                    <!-- The outer ring color-->
        <attr name="innerCircleSuccessColor" format="color"/>           <!-- The inner growing circle Success color -->
        <attr name="innerCircleFailureColor" format="color"/>           <!-- The inner growing circle Failure color -->
        <attr name="innerCircleUnknownColor" format="color"/>           <!-- The inner growing circle Unknown Error color -->
        <attr name="showProgressText" format="boolean"/>                <!-- Show the progress value percentage-->
        <attr name="maxProgressTextSize" format="reference|dimension"/>   <!-- The max size that the progress text can grow to -->
        <attr name="textColorFrom" format="color"/>                     <!-- The progress text color -->
        <attr name="textColorTo" format="color"/>                       <!-- The progress text color -->
    </declare-styleable>

    <!--fliker Progress-->
    <declare-styleable name="FlikerProgressBar">
        <attr name="textSize" format="dimension"/>

        <attr name="loadingColor" format="color"/>

        <attr name="stopColor" format="color"/>

        <attr name="radius" format="dimension"/>

        <attr name="borderWidth" format="dimension"/>

    </declare-styleable>

    <!--item attrs-->
    <declare-styleable name="ItemAttrs">

        <attr name="text_size" format="integer"/>
        <attr name="text_color" format="color"/>
        <attr name="icon_margin_left" format="integer"/>
        <attr name="icon_text_margin" format="integer"/>
        <attr name="margin_right" format="integer"/>
        <attr name="item_height" format="integer"/>
        <attr name="line_color" format="color"/>

        <attr name="right_text_size" format="integer"/>
        <attr name="right_text_color" format="color"/>
        <attr name="right_text_margin" format="integer"/>
    </declare-styleable>

    <!--dialog-->
    <declare-styleable name="Dialog">
        <attr name="DialogTitleAppearance" format="reference" />
        <attr name="DialogTitleText" format="reference|string" />
        <attr name="DialogSpotColor" format="reference|color"/>
        <attr name="DialogSpotCount" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CustomFont">
        <attr name="fontFamily" format="string" />
    </declare-styleable>

    <declare-styleable name="ExpandingItem">
        <attr name="item_layout" format="reference"/>
        <attr name="sub_item_layout" format="reference"/>
        <attr name="separator_layout" format="reference"/>
        <attr name="indicator_size" format="dimension"/>
        <attr name="indicator_margin_left" format="dimension"/>
        <attr name="indicator_margin_right" format="dimension"/>
        <attr name="show_indicator" format="boolean"/>
        <attr name="show_animation" format="boolean"/>
        <attr name="start_collapsed" format="boolean"/>
        <attr name="animation_duration" format="integer"/>
    </declare-styleable>

    <declare-styleable name="UberProgressView">
        <attr name="stationary_circle_radius" format="dimension" />
        <attr name="orbiting_circle_radius" format="dimension" />
        <attr name="stationary_circle_color" format="color" />
        <attr name="fading_circle_color" format="color" />
        <attr name="orbiting_circle_color" format="color" />
        <attr name="animation_time" format="integer" />
        <attr name="direction" format="enum">
            <enum name="clockwise" value="0"/>
            <enum name="counterclockwise" value="1"/>
        </attr>
    </declare-styleable>
</resources>